<!DOCTYPE html>
<html lang="en">
<head>
  <%- include ('./partials/head.ejs') %>

    <title>Following</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
  <%- include ('./partials/nav.ejs') %>
       
          <form class="form-inline my-2 my-lg-0" action="/sessions/logout" method="POST">
            <button class="btn btn-outline-light my-2 my-sm-0">Logout</button>
        </form>
          
        </div>
      </nav>




    
    <div class="container">
      <h1> Authors I'm following</h1>
        <!-- for loop for posts in post collection to show album info, links to show page -->
        <div class="row">
            
          <% for(let i = articles.length - 1; i >= 0; i--) { %>
            <div class="col-sm-6">
              <a href="/myMusic/user/<%=user._id%>/posts/<%=articles[i]._id%>">
                <div class="card" style="width: 18rem;">
                  <img class="card-img-top" src="<%=articles[i].image%>" alt="Card image cap">
                    <div class="card-body">
                      <p class="card-text"><%=articles[i].album%> by <%=articles[i].artist%>
                     </p>
                          
                    </div>
                </div>
              </a>
            </div>
          <%}%>
        </div>
    </div>
    
     <!-- BOOTSTRAP -->
    <%- include ('./partials/bootstrap.ejs') %>

</body>
</html>