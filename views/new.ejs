<body class="new-page">
    <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
          <a class="navbar-brand" href="#">myMusic</a>
          <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
            <li class="nav-item active">
              <a class="nav-link" href="/myMusic">Home </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Authors</a>
            </li>
            <li class="nav-item">
              <a class="nav-link " href="/myMusic/new">New Post</a>
            </li>
            
          </ul>
          <form class="form-inline my-2 my-lg-0" action="/myMusic/search" method="POST">
            <input class="form-control mr-sm-2" type="text" name="searchTerm" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Search</button>
            
          </form>
          <form class="form-inline my-2 my-lg-0" action="sessions/logout" method="POST">
            <button class="btn btn-outline-light my-2 my-sm-0">Logout</button>
        </form>
          
        </div>
      </nav>
      <div class="container">
        <h1>time to review!</h1>
          <form action="/myMusic" method="POST">

            <select name="authorId">
              <% for(let i = 0; i < authors.length; i++) { %>
                <option value="<%=authors[i]._id%>"><%=authors[i].name%></option>
              <% } %>
            </select><br/>


            <div class="form-group" >
              <label for="FormControlInput1">Album</label>
              <input type="text" class="form-control" id="FormControlInput1" placeholder="album name" name="album" >
            </div>
            <div class="form-group">
                <label for="FormControlInput2">Artist</label>
                <input type="text" class="form-control" id="FormControlInput2" placeholder="artist name" name="artist" >
              </div>
            <div class="form-group">
                <label for="FormControlInput3">Album Cover</label>
                <input type="text" class="form-control" id="FormControlInput3" name="image"  placeholder="link to album cover">
                </div>
            <div class="form-group">
                <label for="FormControlInput4">Youtube Link</label>
                <input type="text" class="form-control" id="FormControlInput4" name="link"  placeholder="youtube.com/alex_g">
                </div>
            <div class="form-group">
              <label for="exampleFormControlSelect1">Rating</label>
              <select class="form-control" id="exampleFormControlSelect1" name="rating">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                <option>6</option>
                <option>7</option>
                <option>8</option>
                <option>9</option>
                <option>10</option>
              </select>
            </div>
            <div class="form-group">Review</label>
              <textarea class="form-control" id="exampleFormControlTextarea1" rows="8" name="review" placeholder="review"></textarea>
            </div>
            <div class="form-group">
                <label for="FormControlInput5">Tags</label>
                <input type="text" class="form-control" id="FormControlInput5" name="tags[]" placeholder="jazz, funk, world">
                </div>
                

                
                <button type="submit" class="btn btn-primary">Create Post</button>
             
          </form>
      </div>
    
            

