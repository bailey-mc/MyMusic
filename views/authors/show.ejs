<!DOCTYPE html>
<html lang="en">
<head>
  <%- include ('../partials/head.ejs') %>

    <title>Document</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
      <%- include ('../partials/nav.ejs') %>

          <form class="form-inline my-2 my-lg-0" action="../sessions/logout" method="POST">
            <button class="btn btn-outline-light my-2 my-sm-0">Logout</button>
        </form>
          
        </div>
      </nav>
      <div class="container">
        <h1><%=author.name%></h1>
        
   
        <main>
            <section>
                <h4>About</h4>
                <p><%=author.bio%></p>
            </section>
            <section>
                <h2>Articles:</h2>
                
                <ul>
                    <% for(let i = 1; i < author.articles.length; i++){ %>
                        <li class="authors"><a class="authors" href="/myMusic/<%=author.articles[i]._id%>"><%=author.articles[i].album%></a></li>
                    <% } %>
                </ul>
            </section>
            
            <section>
                <form action="/authors/<%=author._id%>?_method=DELETE" method="post">
                  <button type="submit" class="btn btn-light">Delete Author</button>
                </form>
            </section>
            <section>
              <button type="submit" class="btn btn-light"><a href="/authors/<%=author._id%>/edit">Edit Author</a></button>
            </section>
        </main>
      </div>
  
       


     <!-- BOOTSTRAP -->
     <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
     <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>