      <div class="container">
        <h1>Authors <button class="btn btn-outline-light my-2 my-sm-0"><a style="color:white" href="/authors/new">Create a new Author</a></button></h1>
        
        <div class="row">
            
            <% for(let i = 0; i < authors.length; i++) { %>
                <div class="col-sm-6">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="<%=authors[i].image%>" alt="Card image cap">
                    <div class="card-body">
                      <p class="card-text"><a href="/authors/<%=authors[i]._id%>"><%=authors[i].name%> </a>
                 </p>
                      
                    </div>
                </div>
                </div>
            <%}%>
        
        </div>
      </div>
    
        

        
        
  

